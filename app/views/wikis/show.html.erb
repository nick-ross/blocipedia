<div class="container">
  <div class="panel">  
    <h3><%= markdown @wiki.title %></h3>

    <% if can? :edit, @wiki %>
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-mini' %>
    <% end %>

    <% if can? :destroy, @wiki %>
      <%= link_to "Delete Wiki", [@wiki], method: :delete, class: 'btn btn-mini btn-danger pull-right', confirm: 'Are you sure you want to delete this Wiki' %>
    <% end %>
    <div class="panel panel-content">
      <p><%= markdown @wiki.body %></p>
    </div>
  </div>
</div>

